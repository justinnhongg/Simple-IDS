# ids-proxy defaults
IDS_PROXY_EVENTS=/app/data/events.json
IDS_PROXY_LOG=/app/logs/ids-proxy.log
IDS_PROXY_MAX_EVENTS=1000
IDS_PROXY_LOG_MAX_BYTES=5242880
IDS_PROXY_LOG_BACKUPS=1
IDS_PROXY_MAINTENANCE_INTERVAL=30
IDS_PROXY_MUTE_DEFAULT_SECONDS=300
PORTSCAN_IGNORE=80,443,3000,8000
SLACK_WEBHOOK_URL=
DASHBOARD_URL=http://localhost:3000

# demo-app defaults
IDS_PROXY_INGEST=http://ids-proxy:8000/ingest
IDS_PROXY_TIMEOUT=2
IDS_PROXY_RETRIES=2
IDS_PROXY_RETRY_BACKOFF=0.3
IDS_PROXY_RETRY_JITTER=0.2
DEMO_APP_LOG=/app/logs/demo-app.log

# dashboard defaults
IDS_PROXY_EVENTS_URL=http://ids-proxy:8000/events
IDS_PROXY_TOP_URL=http://ids-proxy:8000/top
IDS_PROXY_CONTEXT_URL=http://ids-proxy:8000/context
IDS_PROXY_METRICS_URL=http://ids-proxy:8000/metrics
IDS_PROXY_EVENTS_STREAM_URL=http://ids-proxy:8000/events/stream
IDS_PROXY_MUTE_URL=http://ids-proxy:8000/mute
IDS_PROXY_EXPORT_URL=http://ids-proxy:8000/export
DASHBOARD_REFRESH=5
ATTACK_SIM_URL=http://attack-sim:9000
DASHBOARD_API_TIMEOUT=5

# attack simulator defaults
ATTACK_SIM_ARGS=--all --pace 1.0
ATTACK_SIM_TARGET=http://demo-app:5000
ATTACK_SIM_TARGET_HEALTH=/
ATTACK_SIM_SOURCE_IPS=10.0.0.10,10.0.0.20,10.0.0.30
ATTACK_SIM_BRUTEFORCE_ROUNDS=3
ATTACK_SIM_SQLI_ROUNDS=3
ATTACK_SIM_PORTSCAN_ROUNDS=3

# ids-proxy gunicorn tuning
GUNICORN_WORKERS=1
GUNICORN_TIMEOUT=300
GUNICORN_WORKER_CLASS=gevent
